<LinearLayout android:id="@+id/LinearLayout1" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">

	<TextView android:id="@+id/txtFoursquareAccount" android:layout_width="match_parent" android:layout_height="wrap_content"
		android:text="@string/action_foursquare_config_connect_foursquare" />
	<Button android:id="@+id/btnFoursquareConnect" android:layout_width="match_parent" android:layout_height="wrap_content"
		android:onClick="doConnectFoursquare" android:text="@string/action_foursquare_config_connect_button" />
</LinearLayout>
